<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminProdutoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/textTitle_Produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Produto"
            android:textColor="#000000"
            android:textSize="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#B6B5B5"
            app:cardElevation="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_addProduto"
                    android:layout_width="139dp"
                    android:layout_height="149dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="73dp"
                    android:background="#E7FAA3"
                    android:text="Adicionar"
                    app:layout_constraintEnd_toStartOf="@+id/btn_deletProduto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_updProduto" />

                <Button
                    android:id="@+id/btn_readProduto"
                    android:layout_width="139dp"
                    android:layout_height="149dp"
                    android:layout_marginStart="69dp"
                    android:layout_marginTop="12dp"
                    android:background="#FFACB9"
                    android:text="Consultar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/btn_updProduto"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_updProduto"
                    android:layout_width="139dp"
                    android:layout_height="149dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:background="#FFF69C"
                    android:text="Atualizar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_deletProduto"
                    android:layout_width="139dp"
                    android:layout_height="149dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="4dp"
                    android:background="#B3E1FF"
                    android:text="Deletar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_readProduto"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>